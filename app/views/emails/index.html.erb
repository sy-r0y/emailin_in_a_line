<h1>Listing emails</h1>

<table>
  <tr>
    <th>To</th>
    <th>From</th>
    <th>Body</th>
    <th>Editors</th>
    <th>Send at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.to %></td>
    <td><%= email.from %></td>
    <td><%= email.body %></td>
    <td><%= email.editors %></td>
    <td><%= email.send_at %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

